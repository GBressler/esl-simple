<% content_for :title do %>Contact<% end %>
	

	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h3>Contact</h3>
					<%= simple_form_for @contact do |form| %>
						<%= form.error_notification %>
						<div class="form-input">
							<%= form.input :first_name, autofocus: true, input_html:{ class: 'form-control' }  %>
							<%= form.input :last_name, input_html:{ class: 'form-control' }  %>
							<%= form.input :email, input_html:{ class: 'form-control' }  %>
							<%= form.input :content, as: :text, input_html:{ class: 'form-control' }  %>
							<%= form.button :submit, 'Submit', input_html:{ class: 'form-control' }  %>
						</div>
					<% end %>
				
			</div>
		</div>
	</div>